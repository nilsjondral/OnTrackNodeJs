extends layout

block scripts
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/chatroom.js')

block content
    div(class='panel panel-default')
        div(class='panel-heading')= title
        div(class='panel-body')
            div(id='messageWindow' style='height: 500px; overflow-x:hidden; overflow-y: scroll')
                ul(id='messages')
        div(class='panel-footer')
            div(class='row')
                div(class='col-lg-12')
                    div(class='input-group')
                        input(id='newMessage' type='text' placeholder='' class='form-control')
                        span(class='input-group-btn')
                            button(id='messageButton' class='btn btn-default' type='button' onClick='chatRoomController.sendMessage()' disabled)= 'Send'